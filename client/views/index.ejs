<DOCTYPE html>
<html lang="en" ng-app="meanNews">
  <head>
    <title>Mean News</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
      </div>
    </div>

  <script type="text/ng-template" id="/home.html">
    <div class="page-header">
      <h1>Mean News</h1>
    </div>

    <div ng-repeat="post in posts | orderBy:'-upvotes'">
      <span class="glyphicon glyphicon-thumbs-up" ng-click="upvote(post)"></span>
      <span class="glyphicon glyphicon-thumbs-down" ng-click="downvote(post)"></span>
      {{ post.upvotes }}
      <a ng-show="post.link" href={{ post.link }}>{{ post.title }}</a>
      <span ng-hide="post.link">{{ post.title }}</span>
      <a href="#/posts/{{ post._id }}">Comments</a>
      <button ng-click="removePost(post)" class="btn btn-primary">Delete</button>
    </div>

    <form ng-submit="addPost()" style="margin-top:30px;">
      <h3>Add a new post</h3>
      <div class="form-group">
        <input class="form-control" type="text" ng-model="title" placeholder="Title" />
      </div>
      <div class="form-group">
        <input class="form-control" type="text" ng-model="link" placeholder="Link" />
      </div>
      <button type="submit" class="btn btn-primary">Post</button>
    </form>
  </script>

  <script type="text/ng-template" id="/posts.html">
    <div class="page-header">
      <h3>
        <a ng-show="post.link" href="{{ post.link }}">{{ post.title }}</a>
        <span ng-hide="post.link">{{ post.title }}</span>
      </h3>
    </div>

    <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
      <span class="glyphicon glyphicon-thumbs-up" ng-click="upvote(comment)"></span>
      <span class="glyphicon glyphicon-thumbs-down" ng-click="downvote(comment)"></span>
      {{ comment.upvotes }} - by {{ comment.author }}
      <p>{{ comment.body }}</p>
    </div>

    <form ng-submit="addComment()" style="margin-top:30px;">
      <h3>Add a new comment</h3>
      <div class="form-group">
        <input class="form-control" type="text" placeholder="Comment" ng-model="body" />
      </div>
      <button type="submit" class="btn btn-primary">Post</button>
    </form>
  </script>
  </body>
</html>